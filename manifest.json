{
  "manifest_version": 2,
  "name": "Mirror finder",
  "version": "1.0",
  "description": "Find mirrors for your links!",
  "permissions": ["tabs", "activeTab", "http://*/*", "https://*/*"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
